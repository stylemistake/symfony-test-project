{% extends 'layout/admin.html.twig' %}

{% form_theme form 'form_fields.html.twig' %}

{% block body %}
<div class="ui container">
  {{ form_start(form, {
    'attr': { 'class': 'ui form' }
  }) }}
    {{ form_errors(form) }}
    {{ form_row(form.name) }}
    {{ form_row(form.email) }}
    {{ form_row(form.categories) }}
    <button class="ui fluid big teal button" type="submit">Save</button>
  {{ form_end(form) }}
</div>
{% endblock %}
