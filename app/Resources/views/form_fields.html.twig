{% extends 'form_div_layout.html.twig' %}

{% block form_errors %}
{% spaceless %}
{% if errors|length > 0 %}
<div class="ui error message">
  <ul>
    {% for error in errors %}
    <li>{{ error.message }}</li>
    {% endfor %}
  </ul>
</div>
{% endif %}
{% endspaceless %}
{% endblock form_errors %}

{% block form_row %}
<div class="field {% if not form.vars.valid %}error{% endif %}">
  <label>{{ form_label(form) }}</label>
  {{ form_widget(form) }}
</div>
{% endblock form_row %}
