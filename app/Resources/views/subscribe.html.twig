{% extends 'layout/base.html.twig' %}

{% block stylesheets %}
<style>
html, body, .ui.middle.aligned.grid {
  height: 100%;
}
</style>
{% endblock %}

{% form_theme form 'form_fields.html.twig' %}

{% block body %}
<div class="ui middle aligned grid">
  <div class="ui column text container">
    <h1>Register to our newsletter!</h1>
    {{ form_start(form, {
      'attr': { 'class': 'ui form' }
    }) }}
      {{ form_errors(form) }}
      {{ form_row(form.name) }}
      {{ form_row(form.email) }}
      {{ form_row(form.categories) }}
      <button class="ui fluid big teal button" type="submit">Save</button>
    {{ form_end(form) }}
  </div>
</div>
{% endblock %}

